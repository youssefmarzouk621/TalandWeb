                cancelButtonColor: '#d33',
                confirmButtonText: 'Login now!'
            }).then((result) => {
                if (result.value) {

                    document.getElementById('redirectlogin').click();
                    document.getElementById(container).innerHTML="<i class='ft-heart'></i>";

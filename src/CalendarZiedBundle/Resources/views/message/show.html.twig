{% extends 'base.html.twig' %}

{% block body %}
    <h1>Message</h1>

    <table>
        <tbody>
            <tr>
                <th>Idmessage</th>
                <td>{{ message.idmessage }}</td>
            </tr>
            <tr>
                <th>Idu</th>
                <td>{{ message.idu }}</td>
            </tr>
            <tr>
                <th>Idreceiver</th>
                <td>{{ message.idreceiver }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.contenu }}</td>
            </tr>
            <tr>
                <th>Dateenvoi</th>
                <td>{% if message.dateenvoi %}{{ message.dateenvoi|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etatmessage</th>
                <td>{{ message.etatmessage }}</td>
            </tr>
            <tr>
                <th>Eventdescription</th>
                <td>{{ message.eventdescription }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('message_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('message_edit', { 'idmessage': message.idmessage }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

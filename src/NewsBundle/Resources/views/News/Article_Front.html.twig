{% extends "default/LayoutFront.html.twig" %}
{% block section %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}



    <!-- ##### Blog Area Start ##### -->
    <div class="blog-area section-padding-100">
    <div class="container">
    <form action="{{ path('showArticleFront') }}" method="get" class="search-form">
        <div class="form-group">
            <span  class="icon icon-search"></span>
            <input name="filter" type="text" class="form-control" placeholder="Rechercher Article">
        </div>
    </form>
        <a class="btn-primary" href="{{ path('trinbvue') }}">tri nbvue</a>
        <a href="{{ path('plusrecent') }}">tri date plus recent</a>
        <a href="{{ path('moinsrecent') }}">tri date moins recent</a>


    <section class="events-area section-padding-100">
        <div class="container">
            <div class="row">
                {% for article in articles %}

                    <!-- Single Event Area -->
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="single-event-area mb-30">
                            <div class="event-thumbnail">
                                <a href="{{ path('article', {'id':article.getIdArticle() }) }}"><img src="{{  asset('../public/uploads/'~article.getImageArticle() )}}"alt="image" width="1000" height="10000" ></a>
                            </div>
                            <div class="event-text">
                                <h4>{{article.getNomArticle()}}</h4>
                                <div class="event-meta-data">
                                    <a href="#" class="event-place">Admin</a>
                                    <a href="#" class="event-date">{{article.getDateArticle() }}</a>
                                </div>
                                <a href="{{ path('imprimer', {'id':article.getIdArticle()}) }}"  class="btn see-more-btn">Download</a>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </section>



    <!-- Pagination -->
    <div style="padding-left: 500px;padding-top: 10px"
         class="oneMusic-pagination-area wow fadeInUp" data-wow-delay="300ms">
        {{ knp_pagination_render(articles) }}
    </div>
    {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
        <br><br><br>

        <div class="alert alert-warning" role="alert">
            <h3>
                Oops
                you can join us by clicking <a href="{{ path('fos_user_registration_register') }}">HERE</a>
                Or if you already have an account click <a href="{{ path('fos_user_security_login') }}" >HERE</a> to connect !
            </h3>

        </div>
    {% endif %}


{% endblock %}
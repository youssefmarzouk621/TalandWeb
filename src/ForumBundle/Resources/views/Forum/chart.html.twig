{% extends "default/LayoutBack.html.twig" %}
{% block section %}

    <div class="gap gap"></div>


    <div class="container" style="margin-top: 150px">
        <div class="row">

            <br>
            <br>



            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
            <div class="col-md-9" class="chartjs-wrapper"><canvas id="chartjs-1" class="chartjs" width="undefined" height="undefined"></canvas>
                <script>
                    var dataSQL=[];
                    var dataNames=[];
                </script>
                {% for forum in forums %}


                        <script>
                            dataSQL.push({{ forum[1] }});
                            dataNames.push("{{ forum.descriptionF }}");
                        </script>

                {% endfor %}

                <div class="chartjs-wrapper"><canvas id="chartjs-1" class="chartjs" width="undefined" height="undefined"></canvas>
                    <script>new Chart(document.getElementById("chartjs-1"),{"type":"pie","data":{"labels":dataNames,"datasets":[{"label":"Nbre de Upvote","data":dataSQL,"fill":false,
                                    "backgroundColor":[
                                        'rgba(255, 99, 132, 0.6)',
                                        'rgba(54, 162, 235, 0.6)',
                                        'rgba(255, 206, 86, 0.6)',
                                        'rgba(75, 192, 192, 0.6)',
                                        'rgba(153, 102, 255, 0.6)',
                                        'rgba(255, 159, 64, 0.6)',
                                        'rgba(255, 99, 132, 0.6)'
                                    ]
                                    ,borderWidth:1,
                                    borderColor:'#777',
                                    hoverBorderWidth:3,
                                    hoverBorderColor:'#000'
                                }]
                            },
                            layout:{
                            padding:{
                                left:50,
                                    right:0,
                                    bottom:0,
                                    top:0
                            }
                        },
                        tooltips:{
                            enabled:true
                        },"options":{
                            title:{
                                display:true,
                                    text:'Statistique Upvote par sujet',
                                    fontSize:25
                            },
                            legend:{
                                display:true,
                                    position:'right',
                                    labels:{
                                    fontColor:'#000'
                                }
                            },
                            layout:{
                                padding:{
                                    left:50,
                                        right:0,
                                        bottom:0,

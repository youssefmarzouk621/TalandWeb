{% extends 'base.html.twig' %}

{% block body %}


    {{ form_start(form) }}

    <!DOCTYPE html>
    <html lang="en" >
    <head>
        <meta charset="UTF-8">
        <title>CodePen - Daily UI #013: Direct Messaging</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans'>
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.3/jquery.mCustomScrollbar.min.css'>
        <link rel="stylesheet" href="{{ asset('FrontOffice/chat.css') }}">

    </head>
    <body>
    <a href="{{ path('tvshow_index') }}" id="redirect">
        <img src="https://cdn.pixabay.com/photo/2016/09/05/10/50/app-1646213_960_720.png" width="80px" style="margin-left: 20px; margin-top: 20px;">
    </a>
    <div class="chat">
        <div class="chat-title">
            <h1>Taland Chat Bot</h1>
            <h2>Report</h2>
            <figure class="avatar">
                <img src="https://thumbs.dreamstime.com/b/le-robot-de-sourire-mignon-bot-causerie-indiquent-salut-illustration-plate-moderne-personnage-dessin-anim%C3%A9-vecteur-130663707.jpg" /></figure>
        </div>
        <input type="hidden" id="reason" {{ form_widget(form.reason) }}
        <input type="hidden" id="responsetype" {{ form_widget(form.responsetype) }}
        <div class="messages">
            <div class="messages-content" id="chekib"></div>
        </div>
        <div class="message-box">
            <input type="number" value="0" style="display: none"  {{ form_widget(form.etat) }}
            <input type="submit" id="confirm" style="display: none;">
            <textarea type="text" class="message-input" placeholder="Type message..."></textarea>

            {{ form_end(form) }}
            <button type="button" class="message-submit">Send</button>
        </div>


    </div>
    <div class="bg"></div>

    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.3/jquery.mCustomScrollbar.concat.min.js'></script><script  src="{{ asset('FrontOffice/chat.js')}}"></script>

    </body>
    </html>

{% endblock %}

